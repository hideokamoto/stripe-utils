{
  "name": "stripe-decline-codes",
  "version": "2.0.0",
  "description": "Complete database of Stripe decline codes with descriptions and localized messages",
  "type": "module",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hideokamoto/stripe-utils.git"
  },
  "bugs": {
    "url": "https://github.com/hideokamoto/stripe-utils/issues"
  },
  "keywords": [
    "stripe",
    "decline",
    "decline-codes",
    "payment",
    "error-messages",
    "localization",
    "i18n",
    "typescript"
  ],
  "author": "Hidetaka Okamoto <info@wp-kyoto.net> (https://wp-kyoto.net)",
  "license": "MIT",
  "engines": {
    "node": ">= 18.0.0"
  },
  "overrides": {
    "tmp": "^0.2.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/node": "^24.10.1",
    "np": "^10.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  }
}
